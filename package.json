{
  "name": "inquiry-pooler",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "clean": "rm -rf .next node_modules/.cache",
    "build": "next build",
    "postbuild": "cp -R public .next/standalone 2>/dev/null || true; cp -R .next/static .next/standalone/.next/ 2>/dev/null || true",
    "start": "next start",
    "dev:portal": "npm run dev -w customer-portal",
    "build:portal": "npm run build -w customer-portal",
    "lint": "next lint",
    "db:generate": "npm run generate -w @inquiry-pooler/db",
    "db:push": "node scripts/run-db-push.js",
    "db:migrate": "npm run db:migrate -w @inquiry-pooler/db",
    "db:studio": "npm run db:studio -w @inquiry-pooler/db",
    "db:studio:remote": "PRISMA_STUDIO_HOST=0.0.0.0 npm run db:studio -w @inquiry-pooler/db",
    "seed": "tsx scripts/seed-inquiries.ts",
    "seed-invoicing": "tsx scripts/seed-invoicing.ts",
    "seed-documents": "tsx scripts/seed-documents.ts",
    "seed-transactions": "tsx scripts/seed-transactions.ts",
    "cleanup-test-data": "tsx scripts/cleanup-test-data.ts",
    "change-role": "tsx scripts/change-role.ts",
    "list-users": "tsx scripts/change-role.ts --list",
    "check-kanban": "tsx scripts/check-kanban-stages.ts",
    "delete-customers-vehicles": "tsx scripts/delete-all-customers-vehicles.ts",
    "cleanup-unassigned-inquiries": "tsx scripts/cleanup-unassigned-inquiries.ts",
    "recalc-invoice-payment-status": "tsx scripts/recalc-invoice-payment-status.ts",
    "sample-invoice-pdf": "tsx scripts/generate-sample-invoice-pdf.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.6.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.9.0",
    "@inquiry-pooler/db": "*",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@react-pdf/renderer": "^4.3.2",
    "@types/nodemailer": "^7.0.9",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^17.3.1",
    "ioredis": "^5.4.1",
    "lucide-react": "^0.427.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.5",
    "nodemailer": "^7.0.13",
    "react": "^18.3.0",
    "react-day-picker": "^9.13.2",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.52.0",
    "tailwind-merge": "^2.5.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.40",
    "prisma": "5.22.0",
    "tailwindcss": "^3.4.7",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0"
  }
}
