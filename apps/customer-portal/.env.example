# ===========================================
# Customer Portal â€“ local and VPS
# Copy to .env and set values. For VPS, use your public URLs and secrets.
# ===========================================

# Database (same as main app; can use root .env or set here)
DATABASE_URL=postgresql://user:password@host:5432/inquiry_pooler?schema=inquiry_pooler

# -------------------------------------------
# Required for VPS (and recommended for local)
# -------------------------------------------
# Public URL of this app (customer portal). NextAuth uses this for cookies and redirects.
# Local: http://localhost:3001
# VPS:   https://portal.yourdomain.com (no trailing slash)
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Optional: same as NEXTAUTH_URL. Used for verification/reset email links when NEXTAUTH_URL is not set.
PORTAL_URL=

# -------------------------------------------
# Main app URL (for invoice links, media archive)
# -------------------------------------------
# Public URL of the main CRM app. Used for "View invoice" links and media archive.
# Local: http://localhost:3000
# VPS:   https://crm.yourdomain.com (no trailing slash)
NEXT_PUBLIC_MAIN_APP_URL=http://localhost:3000
# Or server-only (no NEXT_PUBLIC_ prefix):
# MAIN_APP_URL=http://localhost:3000

# Optional: path to main app uploads dir if portal runs separately and needs to read uploads (e.g. media archive).
# MAIN_APP_UPLOADS_PATH=/path/to/main-app/public

# -------------------------------------------
# Email (verification, password reset)
# -------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
EMAIL_FROM=noreply@yourdomain.com

# -------------------------------------------
# PayPal (wallet deposits)
# -------------------------------------------
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
# production | sandbox
PAYPAL_MODE=sandbox
# Client ID for browser SDK (can same as PAYPAL_CLIENT_ID)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=

# -------------------------------------------
# Wise (wallet deposit link)
# -------------------------------------------
NEXT_PUBLIC_WISE_DEPOSIT_LINK=
# Or: DEFAULT_WISE_PAYMENT_LINK=

# -------------------------------------------
# VPS behind reverse proxy
# -------------------------------------------
# Set to true when behind nginx/traefik so NextAuth trusts X-Forwarded-Host / X-Forwarded-Proto
# AUTH_TRUST_HOST=true
